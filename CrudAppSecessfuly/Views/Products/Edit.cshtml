@model CrudAppSecessfuly.Models.Product;
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<a href="@Url.Action("Show","Products")">กลับ</a>

<form action="@Url.Action("Edit","Products")"  method="post" class="card p-3 m-3 col-lg-6 col-sm-12 shadow">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" asp-for="Name" value="@Model.Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div  class="form-group">
        <label for="price">Price:</label>
        <input type="text" asp-for="Price" value="@Model.Price" class="form-control"  >
       <span    class="text-danger"  asp-validation-for="Price"></span>
    </div>

    <div  class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" asp-for="Description" rows="5"  class="form-control">@Model.Description</textarea>  
    </div>
    <button type="submit" class="btn btn-primary col-3 mt-3 ">Update</button>
</form>


