@model CrudAppSecessfuly.Models.Product;
@{
    ViewData["Title"] = "Inset";
}

<h1>Inset</h1>

<form action="@Url.Action("Inset","Products")"  method="post" class="card p-3 m-3 col-lg-6 col-sm-12 shadow">
    <div class="form-group">
		<label for="name">Name:</label>
		<input type="text" asp-for="Name"  class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div  class="form-group">
		<label for="price">Price:</label>
        <input type="text" asp-for="Price"  class="form-control"  >
       <span    class="text-danger"  asp-validation-for="Price"></span>
    </div>

    <div  class="form-group">
		<label for="description">Description:</label>
        <textarea id="description" asp-for="Description" rows="5"  class="form-control"></textarea>  
    </div>
    <button type="submit" class="btn btn-primary col-3 mt-3 ">Insert</button>

</form>

